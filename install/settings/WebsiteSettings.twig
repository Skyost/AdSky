

require_once __DIR__ . '/../Utils.php';

class WebsiteSettings extends Settings {

    public function __construct() {
        $this -> putSettings('WEBSITE_TITLE', '{{ attribute(post, 'form-website-title') | escape }}');
        $this -> putSettings('WEBSITE_SUBTITLE', '{{ attribute(post, 'form-website-subtitle') | escape }}');
        $this -> putSettings('WEBSITE_ROOT', '{{ attribute(post, 'form-website-root') }}');
        $this -> putSettings('WEBSITE_EMAIL', '{{ attribute(post, 'form-user-email') }}');
        $this -> putSettings('WEBSITE_PAGINATOR_ITEMS_PER_PAGE', 15);
        $this -> putSettings('WEBSITE_HOMEPAGE', '#');
        $this -> putSettings('WEBSITE_FACEBOOK', '#');
        $this -> putSettings('WEBSITE_TWITTER', '#');
    }

    public function getWebsiteTitle() {
        return $this -> getSettings('WEBSITE_TITLE');
    }

    public function getWebsiteSubTitle() {
        return $this -> getSettings('WEBSITE_SUBTITLE');
    }

    public function getWebsiteRoot() {
        $root = $this -> getSettings('WEBSITE_ROOT');
        return ($root . (Utils::endsWith($root, '/') ? '' : '/'));
    }

    public function getWebsiteEmail() {
        return $this -> getSettings('WEBSITE_EMAIL');
    }

    public function getWebsitePaginatorItemsPerPage() {
        return $this -> getSettings('WEBSITE_PAGINATOR_ITEMS_PER_PAGE');
    }

    public function getHomepage() {
        return $this -> getSettings('WEBSITE_HOMEPAGE');
    }

    public function getFacebook() {
        return $this -> getSettings('WEBSITE_FACEBOOK');
    }

    public function getTwitter() {
        return $this -> getSettings('WEBSITE_TWITTER');
    }

}
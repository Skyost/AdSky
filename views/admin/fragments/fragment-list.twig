<h1><i class="fas fa-th-list"></i> My ads</h1>

{% if message == 'renew_success' %}
    <div class="alert alert-success" role="alert">
        <p class="mb-0">Successfully renewed ad !</p>
    </div>
{% endif %}

<div class="alert alert-danger" role="alert" style="display: none;">
    <p class="mb-0"></p>
</div>

<div class="table-responsive">
    <table class="table table-bordered">
        <thead class="thead-light">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Ad title</th>
            <th scope="col">Ad message</th>
            <th scope="col">Ad type</th>
            <th scope="col">Display per day</th>
            <th scope="col">Expiration</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
            <tr><td colspan="7"><em>There is no ad.</em></td></tr>
        </tbody>
    </table>
</div>

{% include 'admin/pagination.twig' %}